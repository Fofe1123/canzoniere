{
	"emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.tex$",
                "cmd": "./gen_all_songlists.sh"
            }
        ]
    },

	"latex-workshop.latex.recipes": [
		{
			"name": "xelatex2",
			"tools": ["xelatex", "xelatex"]
		},
		{
			"name" : "xe-pdf-xe",
			"tools": ["xelatex", "pdflatex", "xelatex"]
		},
		{
			"name": "pdflatex",
			"tools": ["pdflatex"]
		}
	],

	"latex-workshop.latex.tools": [
		{
			"name": "xelatex",
			"command": "xelatex",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"%DOC%"
			]
		},
		{
			"name": "pdflatex",
			"command": "pdflatex",
			"args": [
				"-synctex=1",
				"-interaction=nonstopmode",
				"-file-line-error",
				"%DOC%"
			]
		}
	], 
	
	"latex-workshop.latex.autoClean.run": "onBuilt",
	"latex-workshop.latex.autoBuild.run": "onSave",
	"latex-workshop.latex.clean.subfolder.enabled": true,
	"latex-workshop.latex.clean.fileTypes": [
		"*.aux",
		"*.bbl",
		"*.blg",
		"*.idx",
		"*.ind",
		"*.lof",
		"*.lot",
		"*.out",
		"*.toc",
		"*.acn",
		"*.acr",
		"*.alg",
		"*.glg",
		"*.glo",
		"*.gls",
		"*.ist",
		"*.fls",
		"*.log",
		"*.fdb_latexmk",
		"*.pdf"
	],
}
